<script>
$(function() {
  auto_complete("#user_group_name", "group", "#");
}); 
</script>
<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to @user.name, root_path  %></li>
  	  <li><%= link_to @contact.info, [@user, @contact]  %></li>
      <li class="active"><%= link_to "Associar Grupo", "#" %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <h2 class="title"></h2>
    <div class="inner">
      <% form_for :contact, :url => associate_group_user_contact_path(@user, @contact), :html => { :class => :form } do |f| -%>
        <div class="group">
          <%= f.label :group_name, nil, :class => :label %>
          <%= f.text_field :group_name, :class => 'text_field' %>
        </div>
        <div class="group navform">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
          </button>  
          <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", [@user, @contact], :class => "button" %> 
          <div class="clear"></div>
        </div>
      <% end -%>
      <div class="clear"></div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>