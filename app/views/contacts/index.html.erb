<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to @user.name, root_path  %></li>
  		<li class="active"><%= link_to "Contatos", "#" %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"></h2>
    <div class="inner">
      <table class="table">
        <tr> 
					<th>Informação</th>
          <th>Descrição</th>
					<th>Grupos Associados</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @contacts.each do |contact| -%>
        <tr class="<%= cycle("odd", "even") %>">
					<td>
						<%= link_to contact.info, user_contact_path(@user, contact) %>
					</td>
					<td>
            <%= contact.description %>
          </td>
					<td>
						<%= contact.groups.size %>
					</td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", user_contact_path(@user, contact) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_user_contact_path(@user, contact) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", user_contact_path(@user, contact), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>