<div class="block">
<div class="content">          
  <h2 class="title"></h2>
  <div class="inner">
	
		<div id="diary">
			<ul id="content">
				<% ('A'..'M').each do |alphabet| %>
					<li <%= " class='sel'" if alphabet.to_s == @alphabet %>><%= link_to alphabet.to_s, find_path(alphabet.to_s) %></li>
				<% end %>
			</ul>
			<ul id="content">
				<% ('N'..'Z').each do |alphabet| %>
					<li <%= " class='sel'" if alphabet.to_s == @alphabet %>><%= link_to alphabet.to_s, find_path(alphabet.to_s) %></li>
				<% end %>
			</ul>
			<div class="diary_item">
				<table class="table">
		      <tr>      
			      <th>Nome</th>
		        <th>Descrição</th>
		        <th class="last">&nbsp;</th>
		      </tr>
		      <% @contacts.each do |contact| -%>
		      <tr class="<%= cycle("odd", "even") %>">
						<td><%= link_to contact.user.name, "http://twitter.com/#{contact.user.login}", {:target => "_blank" } %></td>
						<td><%= contact.description %></td>
						<td class="last"><%= link_to contact.info, contact %></td>
		      </tr>          
		      <% end -%>
		    </table>
			</div>
		</div>

    <div class="actions-bar wat-cf">
      <div class="actions">
      </div>
    </div>
  </div>
</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
