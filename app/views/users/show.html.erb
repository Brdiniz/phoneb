<div class="block">
<div class="content">          
  <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Phones</h2>
  <div class="inner">
    <table class="table">
      <tr>             
        <th class="first"><%= t("activerecord.attributes.phone.ddd", :default => t("activerecord.labels.ddd", :default => "DDD")) %></th>
				<th><%= t("activerecord.attributes.phone.number", :default => t("activerecord.labels.number", :default => "Number")) %></th>
				<th><%= t("activerecord.attributes.phone.extension", :default => t("activerecord.labels.extension", :default => "Extension")) %></th>
        <th class="last">&nbsp;</th>
      </tr>
      <% @user.phones.each do |phone| -%>
      <tr class="<%= cycle("odd", "even") %>">
				<td><%= phone.ddd %></td>
				<td><%= link_to phone.number, phone %></td>
				<td><%= phone.extension %></td>
        <td class="last">
          <%= link_to "#{t("web-app-theme.show", :default => "Show")}", phone %> |
          <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_phone_path(phone) %> |
          <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", phone, :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
        </td>
      </tr>          
      <% end -%>
    </table>
    <div class="actions-bar wat-cf">
      <div class="actions">
      </div>
    </div>
  </div>
</div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>
