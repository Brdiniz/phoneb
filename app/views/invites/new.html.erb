<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to @current_user.name, root_path  %></li>
			<% if @group %>
  			<li><%= link_to "Grupo", user_groups_path %></li>
				<li><%= link_to @group.name, user_group_path(@user, @group) %></li>
				<li><%= link_to "Convites", user_group_invites_path %></li>
			<% end %>
			<% if @contact %>
				<li><%= link_to "Contatos", contacts_path %></li>
				<li><%= link_to @contact.info, @contact %></li>			
				<li><%= link_to "Convites", contact_invites_path(@contact) %></li>	
			<% end %>
      <li class="active"><%= link_to "Novo", "#" %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.new", :default => "New")%>  Invite</h2>
    <div class="inner">
			<% url = contact_invites_path(@contact) if @contact %>
			<% url = user_group_invites_path if @group %>
      <% form_for :invite, :url => url, :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>