<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to @current_user.name, root_path  %></li>
  		<li><%= link_to "Grupo", user_groups_path %></li>
			<li><%= link_to @group.name, user_group_path(@user, @group) %></li>
  		<li><%= link_to "Convites", user_group_invites_path %></li>
      <li class="active"><%= link_to "Status", "#" %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.invite.group_id", :default => t("activerecord.labels.group_id", :default => "Group")) %>:</b>
          <%= @invite.group_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.invite.contact", :default => t("activerecord.labels.contact", :default => "Contact")) %>:</b>
          <%= @invite.contact.info %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_user_group_invite_path(@user, @group, @invite), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", user_group_invite_path(@user, @group, @invite), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>