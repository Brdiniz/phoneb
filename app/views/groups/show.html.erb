<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to @user.name, root_path  %></li>
  		<li><%= link_to "Grupos", user_groups_path %></li>
      <li class="active"><%= link_to @group.name, "#" %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
        <p>
          <b><%= t("activerecord.attributes.group.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @group.name %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_user_group_path(@user, @group), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", user_group_path(@user, @group), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>  
		  	<h1>Contatos</h1>
		    <table class="table">
		      <tr>             
		        <th>Nome</th>
						<th>Descrição</th>
						<th>Informação</th>
		        <th class="last">&nbsp;</th>
		      </tr>
		        <% @group.contacts.each do |contact| -%>
		        <tr class="<%= cycle("odd", "even") %>">
							<td>
								<%= contact.user.name %>
							</td>
							<td>
		            <%= contact.description %>
		          </td>
							<td>
								<%= contact.info %>
							</td>
		          <td class="last">
								&nbsp;
		          </td>
		        </tr>
		        <% end -%>
		    </table>    
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>